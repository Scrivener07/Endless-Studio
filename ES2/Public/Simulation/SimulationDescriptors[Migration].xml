<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/Amplitude.Unity.Simulation.SimulationDescriptor.xsd">

    <SimulationDescriptor Name="SystemPopulationMigrationEmigrating" Type="SystemPopulationMigration" IsSerializable="false">
        
        <!-- 30% of growth is given to migration -->
        <BinaryModifier TargetProperty="NetSystemMigrationGrowth" Operation="Addition" Left="$(SystemGrowth)" BinaryOperation="Multiplication" Right="0.25"/>

    </SimulationDescriptor>

    <SimulationDescriptor Name="SystemPopulationMigrationImmigrating" Type="SystemPopulationMigration" IsSerializable="false"/>
    <SimulationDescriptor Name="SystemPopulationMigrationEmigratingToOutpost" Type="SystemPopulationMigration" IsSerializable="false"/>

    <SimulationDescriptor Name="ClassOutpostMigrationFlux" Type="ClassOutpostMigrationFlux">

        <!-- Value taken directly from the system-->
        <Property Name="SystemGrowth"/>
        <Property Name="NetSystemOutpostMigrationGrowthMultiplier" BaseValue="1"/>

        <!-- Resource, emptied when ship is sent -->
        <Property Name="SystemOutpostMigrationGrowthStock"   IsSealed="true"/>
        <Property Name="SystemOutpostMigrationGrowth"/>
        <Property Name="NetSystemOutpostMigrationGrowth"/>

        <!-- Counting down (3 - 2 - 1 - 0 & reset) -->
        <Property Name="TurnsBeforeAutomatedShipRequest"     IsSealed="true" MinValue="-1"/>
        <Property Name="NetTurnsBeforeAutomatedShipRequest"  BaseValue="1"/>

        <Modifier TargetProperty="SystemOutpostMigrationGrowth" Operation="Addition" Value="$(SystemGrowth)"/>
        <Modifier TargetProperty="SystemOutpostMigrationGrowth" Operation="Multiplication" Value="0.2"/>
        <Modifier TargetProperty="SystemOutpostMigrationGrowth" Operation="Multiplication" Value="$(NetSystemOutpostMigrationGrowthMultiplier)"/>

        <Modifier TargetProperty="NetSystemOutpostMigrationGrowth" Operation="Addition" Value="$(SystemOutpostMigrationGrowth)"/>

        <BinaryModifier TargetProperty="NetSystemGrowth" Operation="Subtraction" Left="$(NetSystemOutpostMigrationGrowth)" BinaryOperation="Multiplication" Right="2" Path="./ClassColonizedStarSystem"/>
        
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostMigrationFluxDisabled" Type="OutpostMigrationFlux">

        <Modifier TargetProperty="NetSystemOutpostMigrationGrowth" Operation="Force" Value="0" TooltipHidden="true"/>
        
    </SimulationDescriptor>
    

    <!-- Outpost actions -->
    <SimulationDescriptor Name="OutpostActionIncreaseLocalGrowthEffect" Type="OutpostAction" IsSerializable="false">
        <Modifier TargetProperty="SystemGrowth" Operation="Percent"  Value="1"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostActionIncreaseLocalGrowthTimeLordsEffect" Type="OutpostAction" IsSerializable="false">
        <Modifier TargetProperty="SystemProduction" Operation="Percent"  Value="1"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostActionDescriptorStealGrowth2" Type="OutpostAction" IsSerializable="false">
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostActionStealGrowth2TargetEffect" Type="OutpostAction" IsSerializable="false">
        <Modifier TargetProperty="NetSystemGrowth" Operation="Subtraction" Value="10"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostActionStealGrowth2SelfEffect" Type="OutpostAction" IsSerializable="false">
        <Modifier TargetProperty="SystemGrowth" Operation="Addition" Value="10"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostActionStealGrowth2SelfTimeLordsEffect" Type="OutpostAction" IsSerializable="false">
        <Modifier TargetProperty="SystemProduction" Operation="Addition" Value="10" />
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostActionIncreaseMigrationRate" Type="OutpostAction" IsSerializable="false"/>
    
    <SimulationDescriptor Name="OutpostActionIncreaseMigrationRateEffect" Type="OutpostAction" IsSerializable="false">
        <Modifier TargetProperty="NetSystemOutpostMigrationGrowthMultiplier" Operation="Percent"  Value="1" TooltipHidden="true"/>
    </SimulationDescriptor>

    <SimulationDescriptor Name="OutpostActionIncreaseProductionTimeLordsEffect" Type="OutpostAction" IsSerializable="false">
        <Modifier TargetProperty="SystemProduction"     Operation="Addition"  Value="25"/>
    </SimulationDescriptor>
    
</Datatable>