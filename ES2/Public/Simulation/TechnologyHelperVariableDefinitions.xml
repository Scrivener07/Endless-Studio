    <!-- HELPER VARIABLES -->
    <!-- These are used by the TechnologyHelper formulas in the TechnologyDefinitions to suggest which tech should be researched next. -->
    <!-- Add Operations, RefinedProperties, Int and Values to get the value you desire. -->
    <!-- Then use the result in the TechnologyDefinition's formula to calculate the technology score (interest) -->
    
    <!-- Values allow you to get simulation-dependent information and use the following as sources: -->
    <!-- - Empire: the empire for which the technology is evaluated -->
    <!-- - KnownEmpires: the empires with which the empire has the IsKnown diplomatic ability -->
    <!-- - AllEmpires: all empires including empire for which tech is evaluated -->
    <!-- - VisibleSystems: all systems which are at least revealed for the empire -->
    <!-- - OwnedSystems: StarSystemNodes of the systems owned by the empire. Attention! Not ColonizedStarSystems! Use Empire and a path to access ColonizedStarSystems. -->
    <!-- - NeutralSystems: StarSystemNodes of the galaxy which are not owned by anyone -->
    <!-- - AllSystems: All the StarSystemNodes of the galaxy, which are not undiscoverables for the empire -->
    
    <!-- Note that the score calculated with the formula is then divided by the cost of the technology to get the final score -->

    <!-- ################################################ -->
    <!-- #######                EMPIRE           ####### -->
    <!-- ################################################ -->
    <TechnologyHelperVariableDefinition Name="SumSystemLevels">
        <Value Source="Empire" Path="ClassEmpire" PropertyName="SystemLevelSum"/>
    </TechnologyHelperVariableDefinition>

    <TechnologyHelperVariableDefinition Name="TotalSystems">
        <Value Source="Empire" Path="ClassEmpire/ClassColonizedStarSystem" />
    </TechnologyHelperVariableDefinition>

    <TechnologyHelperVariableDefinition Name="KnownEmpires">
        <Value Source="KnownEmpires" />
    </TechnologyHelperVariableDefinition>

    <TechnologyHelperVariableDefinition Name="EnemyEmpires">
        <Value Source="Empire" Path="ClassEmpire" PropertyName="WarCount"/>
            </TechnologyHelperVariableDefinition>
    <!-- ################################################ -->
    <!-- #######                LAMBDA             ####### -->
    <!-- ################################################ -->
    <TechnologyHelperVariableDefinition Name="TurnVariable">
        <RefinedProperty Property="ProportionalTurns"/>
    </TechnologyHelperVariableDefinition>

    <!--  MINOR EMPIRES DIPLOMACY -->
    <TechnologyHelperVariableDefinition Name="MinorEmpiresDiplomacyVariable">
        <Value Source="KnownEmpires" Path="ClassEmpire,EmpireTypeMinor,PersonalityTraitPacifist"/>
    </TechnologyHelperVariableDefinition>

    <!--  MINOR EMPIRES DIPLOMACY -->
    <TechnologyHelperVariableDefinition Name="MajorEmpiresDiplomacyVariable">
        <Operation Operator="Subtraction">
            <Value Source="KnownEmpires" Path="ClassEmpire,EmpireTypeMajor" Multiplier="1.5"/>
            <Value Source="KnownEmpires" Path="ClassEmpire,EmpireTypeMinor,AffinityGameplayCravers"/>
        </Operation>
    </TechnologyHelperVariableDefinition>

    <!-- NODE REVEALED PERCENTAGE -->
    <TechnologyHelperVariableDefinition Name="ExplorationRatioVariable">
        <Operation Operator="Division">
            <!-- Add 1 for each revealed system -->
            <Value Source="VisibleSystems"/>
            <!-- And divide by a value incremented by 1 for each system -->
            <Value Source="AllSystems"/>
        </Operation>
    </TechnologyHelperVariableDefinition>

    <TechnologyHelperVariableDefinition Name="TradeCompanyVariable">
        <Value Source="Empire" PropertyName="PeaceCount" Multiplier="5"/>
    </TechnologyHelperVariableDefinition>

    <TechnologyHelperVariableDefinition Name="TradeSubsidiaryVariable">
        <Value Source="Empire" Path="ClassEmpire" PropertyName="NumberOfTradingCompanies" Multiplier="2"/>
    </TechnologyHelperVariableDefinition>

